/* pages/address/address.wxss */
page{color: #333333;background: #efeff4;}
.list{padding: 0rpx 0rpx;background: #fff;margin: 20rpx 0rpx 0 0rpx;border-radius: 10rpx}
.list .text text{width: 100%;display: inline-block;font-size: 30rpx;line-height: 60rpx}
.list .text .address{font-size: 28rpx;}
.list .text{padding: 0 30rpx;}
.hr{width: 100%;height: 1px;background: #e0e0e0;margin: 15rpx 0 5rpx 0;}
.bottom{display: flex;flex: 1;padding: 0 30rpx;}
.left{width: 50%;display: flex;font-size: 32rpx;}

.left icon{margin: auto 20rpx auto 0;}
.left text{line-height: 80rpx;}
.right{width: 50%;line-height: 80rpx;font-size: 32rpx;text-align: right;}
.right text{width: 115rpx;display: inline-block;margin-left: 35rpx}
.edit{background: url("http://localhost:8080/images/bianji.png") no-repeat left center;background-size: 40rpx auto;}
.del{background: url(http://localhost:8080/images/del.png) no-repeat left center;background-size: 40rpx auto;}

.bottom-box{
    position: fixed;
    width: 100%;
    bottom: 0;
    font-size:28rpx;
    color:#000000;
    border-top: 1rpx solid #eee;
    height:88rpx;
    line-height: 88rpx;
    background-color: #fff;
    background-size: 15rpx auto;display: flex;align-items:center;
}
.bottom-box .add-btn{
    width: 300rpx;height: 58rpx;line-height: 58rpx;background: #1e963c;border-radius:50rpx;color: #fff;text-align: center; 
    margin: auto auto;font-size: 30rpx;
}





































