    <text>好评</text>
    <text>70万+</text>
  </view>
  <view class="nav_li {{currentItem==2?'act':''}}" data-id="2" bindtap="nav_act">
    <text>中评</text>
    <text>70万+</text>
  </view>
  <view class="nav_li {{currentItem==3?'act':''}}" data-id="3" bindtap="nav_act">
    <text>差评</text>
    <text>70万+</text>
  </view>
  <view class="nav_li {{currentItem==4?'act':''}}" data-id="4" bindtap="nav_act">
