<view class='con'>
  <view class='comment' wx:for="{{list}}" data-id='{{item.id}}'>
    <view class='t_tit'>
      <view>
        <text>{{item.name}}</text>
      </view>
    </view>
    <view class='t_con'>
      <text class='t1'>{{item.txt}}</text>
      
      <text class='t2'>{{item.time}}</text>
    </view>
  </view>
</view>

