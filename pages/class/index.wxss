page{height:100%;background: #fff;}
/*左菜单栏  */
.nav_left{width: 160rpx;height: 100%;word-wrap: normal;overflow-y: hidden;float: left;font-size: 28rpx;background:#e8e8ed}
.nav_left .nav_li{width: 160rpx;height: 90rpx;text-align: center;line-height: 90rpx;}
.nav_ul{width: 160rpx;height: 100%;word-wrap: normal;overflow-y: hidden;}
.nav_ul .act{color: red;background: #fff;}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
