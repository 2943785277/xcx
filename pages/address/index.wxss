/* pages/address/address.wxss */
page{color: #333333;background: #efeff4;}
.list{width: 620rpx;padding: 30rpx 40rpx;background: #fff;margin: 25rpx 25rpx 0 25rpx;border: 1px solid #e0e0e0;border-radius: 10rpx}
.list .text text{width: 100%;display: inline-block;font-size: 30rpx;line-height: 60rpx}
.hr{width: 100%;height: 1px;background: #e0e0e0;margin: 15rpx 0 5rpx 0;}
.bottom{display: flex;flex: 1;}
.left{width: 50%;display: flex;font-size: 32rpx;}
.left icon{margin: auto 20rpx auto 0;}
.left text{line-height: 80rpx;}
.right{width: 50%;line-height: 80rpx;display: flex;font-size: 32rpx;text-align: right;}
.right text{width: 115rpx;display: inline-block;margin-left: 35rpx}
.edit{background: url("http://localhost:8080/images/bianji.png") no-repeat left center;background-size: 40rpx auto;}
.del{background: url(http://localhost:8080/images/del.png) no-repeat left center;background-size: 40rpx auto;}

.bottom-box{
    position: fixed;
    width: 100%;
    bottom: 0;
    font-size:28rpx;
    color:#000000;
    border-top: 1rpx solid #eee;
    height:100rpx;
    line-height: 100rpx;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center;
    background-color: #fff;
    background-size: 15rpx auto;
}
.bottom-box .add-btn{
    margin-left: 30rpx;
    padding-left: 70rpx;
    background: url(https://cdn.it120.cc/images/weappshop/add-addr.png) no-repeat left center;
    background-size: 40rpx auto;
}





































